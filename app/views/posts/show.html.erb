<div class="card text-center  mx-center mx-auto col-md-6 my-5">
  <div class="card-body">
    <%= image_tag @post.photos.first.image.url(:medium) %>
    <table class="table justify-content-center">
      <tbody>
        <tr>
          <th scope="row">所在地</th>
            <td><%= @post.where %></td>
        </tr>
        <tr>
          <th scope="row">最寄駅</th>
          <td><%= @post.station %></td>
        </tr>
        <tr>
          <th scope="row">料金</th>
          <td><%= @post.price %></td>
        </tr>
        
      </tbody>
    </table>
    <% if @post.explanation.present? %>
      <h5><strong>説明</strong></h5>
      <%= @post.explanation %>
    <% end %>
    <div class="text-left">
      <%= link_to  "/posts/" do %>
      <i class="fas fa-angle-double-left"></i>投稿一覧に戻る
      <% end %>
    </div>
  </div>
  
</div>