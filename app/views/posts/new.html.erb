<div class="card text-center  mx-center mx-auto my-5 ">
  <div class="card-header">
    新規投稿
  </div>
  <div class="card-body">
    <%= form_with model: @post do |f| %>

      <div class="my-2">
        <%= f.fields_for :photos do |i| %>  
               
            <%= i.file_field :image %>
            
        <% end %>
      </div >

      <div class="my-2">
        <%= f.label :所在地（必須） %>
      </div>
        <%= f.text_field :where ,size: 50,placeholder:"都道府県、市区町村など" %>

      <div class="my-2">
        <%= f.label :最寄駅（必須） %>
      </div>
        <%= f.text_field :station,size: 50,placeholder:"○○駅" %>

      <div class="my-2">
        <%= f.label :料金（必須） %>
      </div>
        <%= f.text_field :price,size: 50,placeholder:"無料or有料(○○円)" %>

      <div class="my-2">
        <%= f.label :説明（任意） %>
      </div>
        <%= f.text_field :explanation,size: 50,placeholder:"駐輪場の広さ、場所の説明、屋根の有無など" %>
      
      <div class="my-3">
        <%= f.submit "投稿",class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
